.container {
  overflow: hidden;
}
/* =====头部导航====== */
.nav {
  width: 100%;
  height: 88rpx;
  display: flex;
  font-size: 32rpx;
  color: rgba(34, 34, 34, 1);
  justify-content: space-around;
  line-height: 85rpx;
  /* position: relative; */
  border-bottom: 1px solid #f5f5f7;
  position: fixed;
  background-color: white;
  z-index: 10;
}

.bold {
  font-weight: 600;
  border-bottom: 3px solid #0093FF;
  box-sizing: border-box;
}

.tag-box {
  position: relative;
  /* margin: 0 30rpx; */
  color:#222;
  box-sizing: border-box;
}
.tag-box view{
  font-size: 32rpx;
  color: #222;
}

.borderline {
  width: 50rpx;
  height: 3px;
  background-color: transparent;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
}

.active-tag {
  background-color: #0093FF;
}

/* ===========swiper=================== */

.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;  
    line-height: 80rpx;}  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
}  
.on{ color: #da7c0c;  
    border-bottom: 5rpx solid #da7c0c;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
scroll-view{
  margin-top: 88rpx;
}
